<% if (site.posts && site.posts.length > 0) { %>
    <% if (page.layout == 'tag') { %>
        <div class="cover">
            <div class="cover__logo">
                <h1>Tags</h1>
            </div>
        </div>
        <main class="main tagscloud">
            <%- tagcloud({
                min_font: 16, 
                max_font: 35, 
                amount: 999, 
                color: true, 
                start_color: '#ACB3C2', 
                end_color: '#454D5D',
            }) %>
        </main>
        <style>
            .tagscloud a {
                margin-right: 1em;
                border-bottom: 1px solid #ACB3C2;
                line-height: 65px;
                white-space: nowrap;
            }
            .tagscloud a:hover {
                border-bottom: 2px solid #454D5D;
                text-decoration: none;
            }
        </style>
    <% } else { %>
        <div class="cover">
            <div class="cover__logo">
                <h1 id="title">Tags</h1>
            </div>
        </div>
        <script>document.getElementById("title").innerHTML="标签："+decodeURI(window.location.pathname).slice(6,-1)</script>
        <main class="main">
            <%- partial('_partial/post/post-list') %>
        </main>
    <% } %>
<% } %>
