section
    display block

html
    --base-font-size 16px
    font-size var(--base-font-size)

body[data-theme=dark]
    --bg-color #292a2d
    --bg-content-color #373c3f
    --bg-code rgba(0,0,0,0.3)
    --border-color hsla(0,0%,100%,0.1)
    --body-color #ced8de
    --title-color #fff
    --link-color #eb5757

body
p
    font-family rubik,-apple-system,BlinkMacSystemFont,Segoe UI,Helvetica,Arial,pingfang sc,source han sans sc,noto sans cjk sc,sarasa gothic sc,microsoft yahei,sans-serif,Apple Color Emoji,Segoe UI Emoji,Varela Round

body
    --bg-color $color_background
    --bg-content-color $color_card
    --bg-code $color_codeblock
    --body-color $color_font
    --title-color $color_title
    --link-color $color_link
    --border-color rgba(0,0,0,0.1)
    --space 3.5rem
    --content-width $max_width_main
    --header-height 60px
    --radius $radius_main
    font-weight 400
    background-color var(--bg-color)
    color var(--body-color)
    transition color .6s,background-color .6s
    margin 0
    padding 0
    line-height 1.7

@media screen and (max-width:728px)
    body
        --space $space_s
        
@media screen and (max-width:500px)
    body
        --space $space_sm

.main
    margin 0 auto
    padding 1.5vw 15px 0
    max-width 800px

    .post
        img
            justify-content center!important
            align-items center!important
            margin-left auto
            margin-right auto
            max-width 100%
            border-radius 4px
            background 0 0

    &.tagscloud
        margin 0 auto
        padding 0 5rem
        max-width 100%

    &.friends 
        margin 0 auto 
        padding 0 5rem
        max-width 100%

@media screen and (max-width: 450px)
    .main
        &.tagscloud
            padding 0 0.5rem
        &.friends
            padding 0 0.5rem