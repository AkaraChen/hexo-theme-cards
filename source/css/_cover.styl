.author
    display block
    text-align center
    margin 3rem auto 3rem auto

    .author__logo
        max-width var(--logo-width)
        height auto
        margin-left auto
        margin-right auto
    
    .author__intro
        color: #999

    .cover-menus
        margin-top 1.5rem
        .cover-menu 
            text-decoration none
            padding .325rem .4rem
            color var(--link-color)

            &:hover
                color var(--link-color-hover)

